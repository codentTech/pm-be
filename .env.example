# Server
PORT=5000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=
DB_NAME=trello_clone

# JWT (generate a strong secret for production)
JWT_SECRET_KEY=

# Auth0 (optional)
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_CALLBACK_URL=http://localhost:5000/auth/single-sign-on/callback

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:5000/auth/github/callback

# Facebook OAuth (optional)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:5000/auth/facebook/callback

# Email (Brevo - required for invitations, verify-email, forgot-password)
# Get your API key at https://app.brevo.com/settings/keys/api
BREVO_API_KEY=
SENDER_EMAIL=noreply@example.com
SENDER_NAME=Trello Clone

# Frontend URL (for invitation links in emails)
FRONTEND_URL=http://localhost:3000
